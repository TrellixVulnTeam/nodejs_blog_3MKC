<div class="mt-4">
    <h2>EDIT COURSES</h2>
    <div class="row">
        <div class="col-12">
            <form method="POST" action="/news/edit_detail/{{cources.slug}}?_method=PUT">
                <div class="form-group">
                    <label for="name">Name Course</label>
                    <input type="text" class="form-control" value="{{cources.name}}" id="name" name="name">
                </div>
                <div class="form-group">
                    <label for="describe">Describe</label>
                    <input type="text" class="form-control" value="{{cources.describe}}" id="describe" name="describe">
                </div>
                <div class="form-group">
                    <label for="img">Images</label>
                    <input type="text" class="form-control" value="{{cources.img}}" id="img" name="img">
                </div>
                <button type="submit" class="btn btn-primary">Edit Course</button>
            </form>
        </div>
    </div>
</div>